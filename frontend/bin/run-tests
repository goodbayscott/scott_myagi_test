#!/usr/bin/env bash
set -e

opt="$1"

watchCommand=""
if [ "$opt" == "watch" ] ; then
  watchCommand="--no-single-run --auto-watch"
  echo "Watching enabled..."
fi

cd "$(dirname "$(dirname $0)")"

if [ -z "$NODE_ENV" ]; then
  export NODE_ENV="development"
fi

./node_modules/.bin/karma start --browsers ChromeHeadlessCustom $watchCommand
